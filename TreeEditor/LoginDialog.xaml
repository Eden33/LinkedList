<Window x:Class="TreeEditor.LoginDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Please provide a username" Height="121" Width="263">
    <Grid>
        <Label Content="User:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="loginTB" HorizontalAlignment="Left" Height="23" Margin="49,10,0,0" 
                 TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="137" TextChanged="loginTB_TextChanged"/>
        <Button Content="Done" HorizontalAlignment="Left" Margin="111,57,0,0" VerticalAlignment="Top"
                Width="75" RenderTransformOrigin="0.467,0.045" IsDefault="True"
                Name="loginBtn" IsEnabled="False" Click="Button_Click"/>
    </Grid>
</Window>
